# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Web pages
GET     /                                          controllers.ApplicationController.index

GET     /insertPage                                controllers.ApplicationController.insertPage

GET     /queryPage                                 controllers.ApplicationController.queryPage

GET     /assets/*file                              controllers.Assets.versioned(path="/public", file: Asset)

POST    /api/v1/createDagr                         controllers.ApplicationController.insertNewDocumentAsNewDagr

POST    /api/v1/addComponent                       controllers.ApplicationController.insertNewDocumentAsComponent

GET     /api/v1/deleteDagr/:uuid                   controllers.ApplicationController.deleteDagr(uuid: java.util.UUID)

GET     /api/v1/findDagrByUuid/:uuid               controllers.ApplicationController.findDagrByUuid(uuid: java.util.UUID)

GET     /api/v1/deleteComponent/:uuid              controllers.ApplicationController.deleteDagrComponent(uuid: java.util.UUID)

GET     /api/v1/findComponentByUuid/:uuid          controllers.ApplicationController.findComponentByUuid(uuid: java.util.UUID)

POST    /api/v1/addAnnotation                      controllers.ApplicationController.addAnnotationToDagr

POST    /api/v1/deleteAnnotation                   controllers.ApplicationController.deleteAnnotation

POST    /api/v1/batchAddAnnotations                controllers.ApplicationController.batchAddAnnotations

